<% if current_user.added_to_favorites?(micropost) %>
    <%= form_with( model: current_user.favorites.find_by(micropost_id: micropost.id), remote: true, method: :delete, class: 'd-inline') do |f| %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
        <div class="btn btn-success btn-sm">
            <%= f.submit 'Liked', class: 'btn btn-success btn-sm' %>
            <span class="badge badge-light"><%= micropost.count_users %></span>
        </div>
    <% end %>
<% else %>
    <%= form_with( model: current_user.favorites.build, remote: true, class: 'd-inline') do |f| %>
        <%= hidden_field_tag :micropost_id, micropost.id %>
        <div class="btn btn-secondary btn-sm">
            <%= f.submit 'Like', class: 'btn btn-secondary btn-sm' %>
            <span class="badge badge-light"><%= micropost.count_users %></span>
        </div>
    <% end %>
<% end %>