<% if users.any? %>
    <ul class="list-unstyled">
        <% users.each do |user| %>
            <li class="media">
                <% if user.image? %>
                    <%= image_tag user.image.to_s, class: 'mr-2 rounded', size: 50 %>
                <% else %>
                    <%= image_tag 'avatar.jpeg', class: 'rounded mr-2', size: 50 %>
                <% end %>
                <div class="media-body">
                    <div>
                        <%= user.name %>
                    </div>
                    <div>
                        <p><%= link_to 'View Profile', user_path(user) %></p>
                    </div>
                </div>
            </li>
        <% end %>
    </ul>
    <%= paginate users %>
<% end %>