<% if current_user == user %>
    <div class="field form-group">
        <%= form_with( model: current_user, local: true, method: :put) do |f| %>
            <div class="custom-file mt-2">
                <%= f.label :image, '画像選択', class: 'custom-file-label' %>
                <%= f.file_field :image, class: 'custom-file-input required' %>
            </div>
            <% if current_user.image? %>
                <p class="mt-2"><%= f.check_box :remove_image %>プロフィール画像の削除</p>
            <% end %>
            <%= f.submit 'プロフィール画像の変更', class: 'btn btn-info btn-sm mt-2' %>
        <% end %>
    </div>
<% end %>